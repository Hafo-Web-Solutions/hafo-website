{# templates/admin/my_dashboard.html.twig #}
{% extends '@EasyAdmin/layout.html.twig' %}

{% block main %}
    <div class="row">
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4 ">
            <div class="card  border-info bg-dark shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs  text-info text-uppercase mb-2">
                                Posts
                            </div>
                            <div class="h3 mb-1 text-white">{{ posts }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-trend-up fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4 ">
            <div class="card  border-info bg-dark shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs  text-info text-uppercase mb-2">
                                Projets
                            </div>
                            <div class="h5 mb-0 text-white">{{ projects }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-trend-up fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row"></div>
{% endblock main %}