          <option value="form1">Développement de site web</option>
          <option value="form2">Refonte</option>
          <option value="form3">Maintenance</option>
          <option value="form4">Référencement</option>
        </select>
      </div>

      <!-- Devlopment form -->
      <div
        x-data="{ block: 1 }"
        x-show="selectedForm === 'form1'"
        class="mt-6 w-full flex flex-col gap-6"
        id="form1"
      >
        <!-- Question 1 -->
        <div x-show="block1 || (block1 = true)" class="flex flex-col">
          <label for="input1" class="default-label">1/8. Nom du projet</label>
          <input
            type="text"
            id="input1"
            class="w-full default-input default-focus"
            placeholder="ex : Mon Site Web Pro"
            @input="block2 =  true"
          />
        </div>

        <!-- Question 2 -->
        <div x-show="block2">
          <label for="input2" class="default-label"
            >2/8. Description de votre entreprise
          </label>
          <textarea
            type="text"
            id="input2"
            class="w-full default-textarea default-focus"
            placeholder="ex : Entreprise de vente de produits artisanaux, fondée en 2015, basée à Paris."
            @input="block3 =  true"
          ></textarea>
        </div>

        <!-- Question 3 -->
        <div x-show="block3">
          <label for="input3" class="default-label"
            >3/8. Objectif du site web
          </label>
          <textarea
            type="text"
            id="input3"
            class="w-full default-textarea default-focus"
            placeholder="ex : Présence en ligne pour augmenter la visibilité et attirer de nouveaux clients."
            @input="block4 =  true"
          ></textarea>
        </div>

        <!-- Question 4 -->
        <div x-show="block4">
          <label for="input4" class="default-label"
            >4/8. Fonctionnalités souhaitées
          </label>
          <textarea
            type="text"
            id="input4"
            class="w-full default-textarea default-focus"
            placeholder="ex : Formulaire de contact, Blog, E-commerce pour vendre des produits."
            @input="block5 =  true"
          ></textarea>
        </div>

        <!-- Question 5 -->
        <div x-show="block5">
          <label for="input5" class="default-label">5/8. Public cible </label>
          <textarea
            type="text"
            id="input5"
            class="w-full default-textarea default-focus"
            placeholder="ex : Adultes de 25 à 45 ans, intéressés par les produits artisanaux."
            @input="block6 =  true"
          ></textarea>
        </div>

        <!-- Question 6 -->
        <div x-show="block6">
          <label for="input6" class="default-label"
            >6/8. Exemples de sites qui vous inspirent
          </label>
          <textarea
            type="text"
            id="input6"
            class="w-full default-textarea default-focus"
            placeholder="ex : www.exemple1.com, www.exemple2.com"
            @input="block7 =  true"
          ></textarea>
        </div>

        <!-- Question 7 -->
        <div x-show="block7">
          <label for="input7" class="default-label">7/8. Budget estimé </label>
          <input
            type="text"
            id="input7"
            class="w-full default-input default-focus"
            @input="block8 =  true"
            placeholder="ex : 2000 - 3000 €"
          />
        </div>

        <!-- Question 8 -->
        <div x-show="block8">
          <label for="input8" class="default-label"
            >8/8. Délai souhaité pour le lancement
          </label>
          <input
            type="text"
            id="input8"
            class="w-full default-input default-focus"
            placeholder="ex : 3 mois à partir de la signature du contrat."
            @input="block9 =  true"
          />
        </div>

        <!-- End block -->
        <div x-show="block9" class="lg:w-[91%]">
          <button id="download-button1" class="blue-button">Télécharger</button>
        </div>
      </div>

